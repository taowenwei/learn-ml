{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.envrc",
            "justMyCode": false,
        },
        {
            "name": "Python Debugger: OpenApi2Tools",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/openapi2tools/openapi2tools/tool.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.envrc",
            "args": [
                "${workspaceFolder}/openapi2tools/examples/openapi.json"
            ],
            "justMyCode": false,
        }
    ]
}